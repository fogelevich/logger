{
  "name": "logger",
  "version": "0.0.1",
  "description": "Console logger",
  "author": "Bipboys Dev Team",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    }
  },
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib/*",
    "types/*",
    "!*.tsbuildinfo",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "pnpm build:clean && heft build --clean",
    "build:clean": "cross-env rm -rf ./lib && cross-env mkdir lib",
    "build:force": "heft build --clean",
    "build:watch": "heft build --watch",
    "clean": "cross-env rm -rf ./node_modules && cross-env rm -rf ./coverage && pnpm build:clean",
    "test": "ts-node ./src/spec/example.test.ts"
  },
  "dependencies": {
    "tslib": "^2.2.0",
    "ts-node": "^10.0.0"
  },
  "devDependencies": {
    "@rushstack/heft": "^0.30.6",
    "@types/node": "^15.6.1",
    "typescript": "^4.2.4",
    "cross-env": "^7.0.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
